# Elliptical tori demo
# a = semi-axis in xz-plane (tube width)
# b = semi-axis in y direction (tube height)
# When a = b, you get a circular torus (default behavior)

# Tall elliptical cross-section (b > a)
torus {
    center = 200, 250, 300
    R = 80
    a = 20
    b = 50
    ior = 1.5
    extinction = 0.02, 0, 0.02
}

# Wide elliptical cross-section (a > b)
torus {
    center = 400, 250, 300
    R = 80
    a = 50
    b = 20
    ior = 1.5
    extinction = 0, 0.02, 0.02
}

# Circular torus for comparison (a = b = r)
torus {
    center = 300, 100, 300
    R = 60
    a = 30
    b = 25
    ior = 1.5
    extinction = 0.02, 0.02, 0
}

# Rotated elliptical torus
torus {
    center = 300, 400, 300
    R = 70
    a = 15
    b = 40
    rotation = x:45
    ior = 1.5
    extinction = 0.01, 0.01, 0.01
}
